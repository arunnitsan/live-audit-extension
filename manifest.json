{
  "manifest_version": 3,
  "name": "Accesstive - Accessibility Audit Extension",
  "version": "1.0.0",
  "description": "Chrome extension for real-time accessibility auditing using Accesstive widget design. Built with Vite + TypeScript for maintainability.",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "tabs",
    "scripting",
    "sidePanel",
    "windows",
    "notifications",
    "alarms",
    "unlimitedStorage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Accesstive - Accessibility Audit",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "options.html",
        "sidebar.html",
        "sidebar.css",
        "sidebar.js",
        "content.css",
        "content.js",
        "audit.js",
        "background.js",
        "chunks/*.js",
        "assets/**/*",
        "icons/**/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}